<h1 class="mdc-typography--headline">MDC-Ember Demos</h1>

{{#if isDemoVisible}}

<section class="component-doc">
  <h2 class="mdc-typography--title">Buttons</h2>
  {{#mdc-button}}Standard Button{{/mdc-button}}
  {{#mdc-button disabled=true click=(action "alert" "Should not see this.")}}Disabled Button{{/mdc-button}}
  {{#mdc-button secondary=true}}Secondary Button{{/mdc-button}}
  {{#mdc-button raised=true}}Raised Button{{/mdc-button}}
  {{#mdc-button raised=true secondary=true}}Raised Secondary Button{{/mdc-button}}
  {{#mdc-button unelevated=true}}Unelevated Button{{/mdc-button}}
  {{#mdc-button unelevated=true secondary=true}}Unelevated Secondary Button{{/mdc-button}}
  {{#mdc-button stroked=true}}Stroked Button{{/mdc-button}}
  {{#mdc-button unelevated=true compact=true}}Unelevated Compact Button{{/mdc-button}}
  {{#mdc-button unelevated=true dense=true}}Unelevated Dense Button{{/mdc-button}}
  {{#mdc-button click=(action "alert" "Action button clicked")}}Action Button{{/mdc-button}}
  <form class="tiny-form" onsubmit={{action "alert" "Form Submitted"}}>
    {{#mdc-button type="submit"}}Submit Button{{/mdc-button}}
  </form>
</section>

<section class="component-doc">
  <h2 class="mdc-typography--title">Cards</h2>
  {{#mdc-card as |card|}}
    {{#card.primary as |primary|}}
      {{#primary.title large=true}}
        Title goes here
      {{/primary.title}}
      {{#primary.subtitle}}
        Subtitle here
      {{/primary.subtitle}}
    {{/card.primary}}
    {{card.media-item src="http://placekitten.com/960/480" size=3 width=480 alt="Kitten"}}
    {{#card.supporting-text}}
      Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod
      tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim
      veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea
      commodo consequat.
    {{/card.supporting-text}}
    {{#card.actions as |actions|}}
      {{#actions.action}}
        Example Action
      {{/actions.action}}
      {{#actions.action click=(action "alert" "Alert action clicked")}}
        Alert Action
      {{/actions.action}}
    {{/card.actions}}
  {{/mdc-card}}
</section>

<section class="component-doc">
  <h2 class="mdc-typography--title">Checkboxes</h2>
  <label>
    {{mdc-checkbox checked=isCheckboxOneChecked onchange=(action (mut isCheckboxOneChecked))}}
    Checkbox
  </label>
  <label>
    {{mdc-checkbox indeterminate=true disabled=true onchange=(action "alert" "Should not see this.")}}
    Disabled Indeterminate Checkbox
  </label>
  {{mdc-checkbox input-id="checkbox-for" checked=isCheckboxTwoChecked onchange=(action (mut isCheckboxTwoChecked))}}
  <label for="checkbox-for">Disassociated Label Checkbox</label>
  <div class="test-action-bubbling" {{action "alert" "Stop the bubbling"}}>
    {{mdc-checkbox input-id="checkbox-for" checked=isCheckboxThreeChecked onchange=(action (mut isCheckboxThreeChecked)) bubbles=false}}
    <div>Checkbox event propagation is disableable: click outside of the checkbox to test</div>
  </div>
  {{mdc-checkbox checked=isCheckBoxFourChecked}}
  <button {{action (toggle "isCheckBoxFourChecked" this)}}>Press to Toggle Checkbox</button>
</section>

<section class="component-doc">
  <h2 class="mdc-typography--title">Radios</h2>
  <label>
    {{mdc-radio checked=isRadioOneChecked onchange=(action (mut isRadioOneChecked))}}
    Radio
  </label>
  <label>
    {{mdc-radio disabled=true onchange=(action "alert" "Should not see this.")}}
    Disabled Radio
  </label>
  {{mdc-radio input-id="radio-for" checked=isRadioTwoChecked onchange=(action (mut isRadioTwoChecked))}}
  <label for="radio-for">Disassociated Label Radio</label>
  <fieldset>
    Radio group with shared <code>name</code> attribute:
    <label>
      {{mdc-radio name="radio-three" checked=isRadioThreeAChecked onchange=(action (mut isRadioThreeAChecked))}}
      A
    </label>
    <label>
      {{mdc-radio name="radio-three" checked=isRadioThreeBChecked onchange=(action (mut isRadioThreeBChecked))}}
      B
    </label>
    <label>
      {{mdc-radio name="radio-three" checked=isRadioThreeCChecked onchange=(action (mut isRadioThreeCChecked))}}
      C
    </label>
  </fieldset>
  <div class="test-action-bubbling" {{action "alert" "Stop the bubbling"}}>
    {{mdc-radio checked=isRadioFourChecked onchange=(action (mut isRadioFourChecked)) bubbles=false}}
    <div>Radio button event propagation is disableable: click outside of the checkbox to test</div>
  </div>
  {{mdc-radio checked=isRadioFiveChecked}}
  <button {{action (toggle "isRadioFiveChecked" this)}}>Press to Toggle Radio</button>
</section>

<section class="component-doc">
  <h2 class="mdc-typography--title">Elevation</h2>
  {{#mdc-elevation z=7}}Elevation Depth 7{{/mdc-elevation}}
</section>

<section class="component-doc">
  <h2 class="mdc-typography--title">Floating Action Buttons</h2>
  {{#mdc-fab click=(action "alert" "Stop clicked")}}
    <i class="material-icons">stop</i>
  {{/mdc-fab}}
  {{#mdc-fab plain=true}}
    <i class="material-icons">play_arrow</i>
  {{/mdc-fab}}
  {{#mdc-fab disabled=true click=(action "alert" "Should not see this.")}}
    <i class="material-icons">pause</i>
  {{/mdc-fab}}
  {{#mdc-fab mini=true}}
    <i class="material-icons">replay</i>
  {{/mdc-fab}}
</section>

<section class="component-doc">
  <h2 class="mdc-typography--title">Text Fields</h2>

  {{mdc-textfield
    label="Box Textfield"
    box=true
    value=textfieldBoxValue
    onchange=(action (mut textfieldBoxValue))
    type="text"
  }}

  {{mdc-textfield
    label="Full width with on event actions"
    fullwidth=true
    value=fullWidthValue
    onchange=(action (mut fullWidthValue))
    onfocus=(action 'logToConsole' 'focus')
    onblur=(action 'logToConsole' 'blur')
    onkeydown=(action 'logToConsole' 'keydown')
    oninput=(action (pipe (action 'logToConsole' 'input')))
    helptext=(concat "Received event for: " (if eventType eventType 'not triggered yet'))
    helptext-persistent=true
    type="text"
  }}

  {{mdc-textfield
    label="Email Address"
    placeholder="something@example.com"
    value=textfieldOneValue
    onchange=(action (mut textfieldOneValue))
    type="email"
    helptext="This will not be sent to any server"
  }}
  TODO: Bug with placeholder + label.

  {{mdc-textfield
    label="Recipient Email"
    value="bad@email@example.com"
    valid=false
    helptext="This does not look like a valid email address"
    helptext-validation-msg=true
  }}

  {{mdc-textfield
    label="Subject"
    disabled=true
    value=textfieldThreeValue
    onchange=(action (mut textfieldThreeValue))
    helptext="This is persistent help text, and the field is disabled"
    helptext-persistent=true
  }}

  {{mdc-textfield
    label="Message Body"
    value=textfieldTwoValue
    onchange=(action (mut textfieldTwoValue))
    multiline=true
    rows=12
    cols=80
  }}
</section>

<section class="component-doc">
  <h2 class="mdc-typography--title">Icon Toggles</h2>

  TODO: The ripple looks odd here. <br />

  {{#mdc-icon-toggle
    pressed=isFirstTogglePressed
    onchange=(action (mut isFirstTogglePressed))
    class="material-icons"
  }}
    {{#if isFirstTogglePressed}}
      star
    {{else}}
      star_border
    {{/if}}
  {{/mdc-icon-toggle}}
  {{#if isFirstTogglePressed}}
    Unstar it.
  {{else}}
    Star it!
  {{/if}}

  <br />
  {{#mdc-icon-toggle pressed=true disabled=true class="material-icons" onchange=(action "alert" "Should not see this.")}}
    star
  {{/mdc-icon-toggle}}
  Disabled.
</section>

<section class="component-doc">
  <h2 class="mdc-typography--title">Lists</h2>

  <h3 class="mdc-typography--subheading2">Single-Line List</h3>

  <h4 class="mdc-typography--subheading3">Text only</h4>
  {{#mdc-list theme="dark" as |list|}}
    {{#list.item}}Single-line item{{/list.item}}
    {{#list.item}}Single-line item{{/list.item}}
    {{#list.item}}Single-line item{{/list.item}}
  {{/mdc-list}}

  <h4 class="mdc-typography--subheading3">Text only (dense)</h4>
  {{#mdc-list dense=true as |list|}}
    {{#list.item}}Single-line item{{/list.item}}
    {{#list.item}}Single-line item{{/list.item}}
    {{#list.item}}Single-line item{{/list.item}}
  {{/mdc-list}}

  <h4 class="mdc-typography--subheading3">Start Detail</h4>
  {{#mdc-list as |list|}}
    {{#list.item as |item|}}
      {{#item.start-detail as |class|}}
        <i class="material-icons {{class}}" aria-hidden="true">network_wifi</i>
      {{/item.start-detail}}
      Wi-Fi
    {{/list.item}}
    {{#list.item as |item|}}
      {{#item.start-detail as |class|}}
        <i class="material-icons {{class}}" aria-hidden="true">bluetooth</i>
      {{/item.start-detail}}
      Bluetooth
    {{/list.item}}
    {{#list.item as |item|}}
      {{#item.start-detail as |class|}}
        <i class="material-icons {{class}}" aria-hidden="true">data_usage</i>
      {{/item.start-detail}}
      Data Usage
    {{/list.item}}
  {{/mdc-list}}

  <h4 class="mdc-typography--subheading3">End Detail</h4>
  {{#mdc-list as |list|}}
    {{#list.item as |item|}}
      Single-line item
      {{#item.end-detail as |class|}}
        <i class="material-icons {{class}}" aria-hidden="true">information</i>
      {{/item.end-detail}}
    {{/list.item}}
    {{#list.item as |item|}}
      Single-line item
      {{#item.end-detail as |class|}}
        <i class="material-icons {{class}}" aria-hidden="true">information</i>
      {{/item.end-detail}}
    {{/list.item}}
    {{#list.item as |item|}}
      Single-line item
      {{#item.end-detail as |class|}}
        <i class="material-icons {{class}}" aria-hidden="true">information</i>
      {{/item.end-detail}}
    {{/list.item}}
  {{/mdc-list}}

  <h3 class="mdc-typography--subheading2">Two-line List</h3>

  <h4 class="mdc-typography--subheading3">Text only</h4>
  {{#mdc-list two-line=true as |list|}}
    {{#list.item as |item|}}
      {{#item.text as |text|}}Two-line item
        {{#text.secondary}}Secondary text{{/text.secondary}}
      {{/item.text}}
    {{/list.item}}
    {{#list.item as |item|}}
      {{#item.text as |text|}}Two-line item
        {{#text.secondary}}Secondary text{{/text.secondary}}
      {{/item.text}}
    {{/list.item}}
    {{#list.item as |item|}}
      {{#item.text as |text|}}Two-line item
        {{#text.secondary}}Secondary text{{/text.secondary}}
      {{/item.text}}
    {{/list.item}}
  {{/mdc-list}}
</section>

<section class="component-doc">
  <h2 class="mdc-typography--title">Menu</h2>

  {{#mdc-menu-anchor as |anchor|}}
    {{#mdc-icon-toggle class="material-icons" pressed=isMenuOneOpen onchange=(action (mut isMenuOneOpen))}}
      more_vert
    {{/mdc-icon-toggle}}
    {{#mdc-menu anchor=anchor open=isMenuOneOpen cancel=(action (queue (toggle "isMenuOneOpen" this) (action "alert" "Menu canceled"))) as |menu|}}
      {{#menu.item click=(action (queue (toggle "isMenuOneOpen" this) (action "alert" "Menu item one clicked!")))}}
        Menu Item One
      {{/menu.item}}
      {{#menu.item click=(action (queue (toggle "isMenuOneOpen" this) (action "alert" "Menu item two clicked!")))}}
        Menu Item Two
      {{/menu.item}}
      {{#menu.item click=(action (queue (toggle "isMenuOneOpen" this) (action "alert" "Menu item three clicked!")))}}
        Menu Item Three
      {{/menu.item}}
    {{/mdc-menu}}
  {{/mdc-menu-anchor}}
</section>

<section class="component-doc">
  <h2 class="mdc-typography--title">Progress Bar</h2>

  <h3 class="mdc-typography--subheading2">Linear Progress Determinate</h3>
  {{input value=myProgress min=0 max=1}}
  <div>Change this to any decimal value between 0 and 1, and the progress bar will update to show that amount.</div>
  <br>
  {{mdc-linear-progress progress=myProgress}}

  <h3 class="mdc-typography--subheading2">Linear Progress Indeterminate</h3>
  {{mdc-linear-progress indeterminate=true}}

  <h3 class="mdc-typography--subheading2">Linear Progress Determinate Secondary</h3>
  {{mdc-linear-progress secondary=true}}

</section>

<section class="component-doc">
  <h2 class="mdc-typography--title">Tab Bar</h2>


  <h3 class="mdc-typography--subheading2">Action-based tabs</h3>
  {{#mdc-tab-bar links=false as |bar|}}
    {{#bar.tab active=isFirstActive become-active=(action (mut isFirstActive))}}
      Fruits
    {{/bar.tab}}
    {{#bar.tab active=isSecondActive become-active=(action (mut isSecondActive))}}
      Vegetables
    {{/bar.tab}}
    {{#bar.tab active=isThirdActive become-active=(action (mut isThirdActive))}}
      Meats
    {{/bar.tab}}
  {{/mdc-tab-bar}}

  <h3 class="mdc-typography--subheading2">Tabs with icons and labels</h3>
  {{#mdc-tab-bar icons="with-text" links=false as |bar|}}
    {{#bar.tab active=isFirstActiveAlt become-active=(action (mut isFirstActiveAlt)) as |tab|}}
      {{#tab.icon}}<i class="material-icons">people</i>{{/tab.icon}}
      {{#tab.icon-text}}People{{/tab.icon-text}}
    {{/bar.tab}}
    {{#bar.tab active=isSecondActiveAlt become-active=(action (mut isSecondActiveAlt)) as |tab|}}
      {{#tab.icon}}<i class="material-icons">credit_card</i>{{/tab.icon}}
      {{#tab.icon-text}}Money{{/tab.icon-text}}
    {{/bar.tab}}
    {{#bar.tab active=isThirdActiveAlt become-active=(action (mut isThirdActiveAlt)) as |tab|}}
      {{#tab.icon}}<i class="material-icons">shopping_cart</i>{{/tab.icon}}
      {{#tab.icon-text}}Things{{/tab.icon-text}}
    {{/bar.tab}}
  {{/mdc-tab-bar}}

  <h3 class="mdc-typography--subheading2">Tabs with icons</h3>
  {{#mdc-tab-bar icons="only" links=false as |bar|}}
    {{#bar.tab active=isFirstActiveAlt2 become-active=(action (mut isFirstActiveAlt2)) as |tab|}}
      {{#tab.icon}}<i class="material-icons">people</i>{{/tab.icon}}
    {{/bar.tab}}
    {{#bar.tab active=isSecondActiveAlt2 become-active=(action (mut isSecondActiveAlt2)) as |tab|}}
      {{#tab.icon}}<i class="material-icons">credit_card</i>{{/tab.icon}}
    {{/bar.tab}}
    {{#bar.tab active=isThirdActiveAlt2 become-active=(action (mut isThirdActiveAlt2)) as |tab|}}
      {{#tab.icon}}<i class="material-icons">shopping_cart</i>{{/tab.icon}}
    {{/bar.tab}}
  {{/mdc-tab-bar}}


  <h3 class="mdc-typography--subheading2">Tabs as <code>\{{link-to}}</code></h3>
  {{#mdc-tab-bar as |bar|}}
    {{#bar.tab "application"}}
      Index
    {{/bar.tab}}
    {{#bar.tab "one"}}
      One
    {{/bar.tab}}
    {{#bar.tab "two"}}
      Two
    {{/bar.tab}}
  {{/mdc-tab-bar}}

  <h3 class="mdc-typography--subheading2">Tab Bar Scrolling</h3>
  {{#mdc-tab-bar-scroller as |scroller|}}
    {{#scroller.tab-bar links=false as |bar|}}
      {{#bar.tab active=isRedActive become-active=(action (mut isRedActive))}}
        Red
      {{/bar.tab}}
      {{#bar.tab active=isYellowActive become-active=(action (mut isYellowActive))}}
        Yellow
      {{/bar.tab}}
      {{#bar.tab active=isGreenActive become-active=(action (mut isGreenActive))}}
        Green
      {{/bar.tab}}
      {{#bar.tab active=isWhiteActive become-active=(action (mut isWhiteActive))}}
        White
      {{/bar.tab}}
      {{#bar.tab active=isBlueActive become-active=(action (mut isBlueActive))}}
        Blue
      {{/bar.tab}}
      {{#bar.tab active=isBlackActive become-active=(action (mut isBlackActive))}}
        Black
      {{/bar.tab}}
      {{#bar.tab active=isPurpleActive become-active=(action (mut isPurpleActive))}}
        Purple
      {{/bar.tab}}
      {{#bar.tab active=isOrangeActive become-active=(action (mut isOrangeActive))}}
        Orange
      {{/bar.tab}}
      {{#bar.tab active=isBrownActive become-active=(action (mut isBrownActive))}}
        Brown
      {{/bar.tab}}
    {{/scroller.tab-bar}}
  {{/mdc-tab-bar-scroller}}

  <h3 class="mdc-typography--subheading2">Dark-themed tabs</h3>
  <div style="background:black">
    {{#mdc-tab-bar dark=true links=false as |bar|}}
      {{#bar.tab active=isFirstActive become-active=(action (mut isFirstActive))}}
        Fruits
      {{/bar.tab}}
      {{#bar.tab active=isSecondActive become-active=(action (mut isSecondActive))}}
        Vegetables
      {{/bar.tab}}
      {{#bar.tab active=isThirdActive become-active=(action (mut isThirdActive))}}
        Meats
      {{/bar.tab}}
    {{/mdc-tab-bar}}
  </div>

  {{outlet}}
</section>

<section class="component-doc">
  <h2 class="mdc-typography--title">Switch</h2>
  <h3 class="mdc-typography--subheading2">Active Switch</h3>
  {{mdc-switch checked=isFirstSwitchOn onchange=(action (mut isFirstSwitchOn))}}
  <button {{action (toggle "isFirstSwitchOn" this)}}>Press to Toggle Switch</button>
  <h3 class="mdc-typography--subheading2">Switch with Toggle Label</h3>
  <label>
    {{mdc-switch checked=isSecondSwitchOn onchange=(action (mut isSecondSwitchOn))}}
    On/Off
  </label>
  <h3 class="mdc-typography--subheading2">Disabled Switch</h3>
  {{mdc-switch disabled=true}}
  <h3 class="mdc-typography--subheading2">Stops Bubbling</h3>
  <div class="test-action-bubbling" {{action "alert" "Stop the bubbling"}}>
    {{mdc-switch bubbles=false}}
    <div>Switch event propagation is disableable: click outside of the checkbox to test</div>
  </div>
</section>

{{/if}}

